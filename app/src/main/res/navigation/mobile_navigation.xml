<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.csc179_patient_tracker_app.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_create_patient"
            app:destination="@id/navigation_createPatient" />
        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_menu"
            app:destination="@id/navigation_menu" />
    </fragment>

    <fragment
        android:id="@+id/navigation_lookup"
        android:name="com.example.csc179_patient_tracker_app.ui.lookup.LookupPatient"
        android:label="Lookup Patient"
       />

    <fragment
        android:id="@+id/navigation_appointment"
        android:name="com.example.csc179_patient_tracker_app.ui.appointment.NewAppointmentFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_new_appointment" />
    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.example.csc179_patient_tracker_app.ui.menu.MenuFragment"
        android:label="Menu"
        tools:layout="@layout/fragment_menu" >
        <argument
            android:name="appointment"
            app:argType="com.example.csc179_patient_tracker_app.data.AppointmentModel" />
    </fragment>
    <activity
        android:id="@+id/navigation_createPatient"
        android:name="com.example.csc179_patient_tracker_app.CreatePatientActivity"
        android:label="activity_create_patient"
        tools:layout="@layout/fragment_create_patient" />
</navigation>